@import '../bootstrap'
@import '../theme'

v-alert($material)
  &.v-alert:not(.v-alert--outline)
    border-color: $material.buttons.disabled !important

theme(v-alert, "v-alert")

.v-alert
  border-width: $alert-border-width
  border-style: solid
  font-size: $alert-font-size
  margin: $alert-margin
  padding: $alert-padding

  &.v-sheet
    display: flex

  &__action,
  &__dismissible
    display: inline-flex
    flex: 0 1 auto

    .v-icon
      font-size: $alert-icon-font-size
      user-select: none

  &__action
    padding-right: $alert-padding

  &__dismissible
    align-self: flex-start
    margin-left: auto
    outline: none
    padding-left: $alert-padding

    .v-btn
      height: 24px
      margin: 0 // TODO: remove in 2.0
      width: 24px

      &:focus .v-icon
        opacity: 1

    .v-icon
      font-size: $alert-dismissible-icon-font-size
      opacity: .56

  &--outline
    border: $alert-outline-border-width $alert-outline-border-style currentColor !important
    background: transparent !important

    .v-icon
      color: inherit !important
